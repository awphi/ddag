{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "preserveWatchOutput": true
  },
  "include": ["src/**/*"]
}
